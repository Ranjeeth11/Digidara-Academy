{
  "name": "Moodle Development",
  "image": "moodle:4.2-php8.1-apache",
  "features": {
    "ghcr.io/devcontainers/features/php:1": {"version": "8.1", "installComposer": true},
    "ghcr.io/devcontainers/features/node:1": {"version": "18"},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "forwardPorts": [8080],
  "postCreateCommand": "apt-get update && apt-get install -y git unzip curl",
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "felixfbecker.php-debug"
      ]
    }
  }
}